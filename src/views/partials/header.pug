header
  a(href="/").header__logo
    i.fab.fa-youtube
  nav
    ul 
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li 
          a(href="/logout") LOGOUT 
        li 
          a(href="/user/edit") EDIT PROFILE
        li 
          a(href="/video/upload") UPLOAD
        li 
          a(href=`/user/${loggedInUser._id}`)
            if loggedInUser.avatarUrl === ""
              span ⭐️
            else
              if loggedInUser.avatarUrl
                if loggedInUser.avatarUrl.includes("github") 
                  img.header__avatar(src=loggedInUser.avatarUrl,crossorigin)
                else 
                  img.header__avatar(src=loggedInUser.avatarUrl,crossorigin)
      else
        li 
          a(href="/login") LOGIN
        li 
          a(href="/join").header__btn JOIN
