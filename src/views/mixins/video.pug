mixin video(video)
  a(href=`/video/${video.id}`).video-mixin
    div.video-mixin__thumb(style=`background-image:url(${video.thumbUrl}),crossorigin;background-size:cover;background-position:center`)
    div.video-mixin__data
      span.video-mixin__title=video.title  
      div.video-mixin__meta
        span #{video.meta.views}회 ∙ 
        span #{video.owner.name}
